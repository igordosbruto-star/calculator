{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Prep Debug Dir",
      "type": "shell",
      "command": "powershell",
      "args": ["-NoProfile","-Command","mkdir -Force output\\Debug | Out-Null"],
      "problemMatcher": []
    },
    {
      "label": "Prep NoDebug Dir",
      "type": "shell",
      "command": "powershell",
      "args": ["-NoProfile","-Command","mkdir -Force output\\NoDebug | Out-Null"],
      "problemMatcher": []
    },

    {
      "label": "Build (Debug, MSYS2 g++)",
      "type": "process",
      "command": "C:/msys64/mingw64/bin/g++.exe",
      "args": [
        "-std=c++20","-Wall","-Wextra","-g3",
        "main.cpp","app.cpp", "corte.cpp", "material.cpp",
        "-I${workspaceFolder}",
        "-I${workspaceFolder}/third_party",
        "-o","output/Debug/app.exe"
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "group": { "kind": "build", "isDefault": true },
      "dependsOn": ["Prep Debug Dir"],
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Build (NoDebug, MSYS2 g++)",
      "type": "process",
      "command": "C:/msys64/mingw64/bin/g++.exe",
      "args": [
        "-std=c++20","-Wall","-Wextra","-O2","-DNDEBUG",
        "main.cpp","app.cpp",
        "-I${workspaceFolder}",
        "-I${workspaceFolder}/third_party",
        "-o","output/NoDebug/app.exe"
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "dependsOn": ["Prep NoDebug Dir"],
      "problemMatcher": ["$gcc"]
    },

    {
      "label": "Run (NoDebug)",
      "type": "shell",
      "command": "${workspaceFolder}/output/NoDebug/app.exe",
      "options": { "cwd": "${workspaceFolder}" },
      "dependsOn": "Build (NoDebug, MSYS2 g++)"
    },
    {
      "label": "Clean Debug",
      "type": "shell",
      "command": "powershell",
      "args": ["-NoProfile","-Command","Remove-Item -Recurse -Force output\\Debug -ErrorAction SilentlyContinue"],
      "problemMatcher": []
    },
    {
      "label": "Clean NoDebug",
      "type": "shell",
      "command": "powershell",
      "args": ["-NoProfile","-Command","Remove-Item -Recurse -Force output\\NoDebug -ErrorAction SilentlyContinue"],
      "problemMatcher": []
    }
  ]
}
