{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug (GDB MinGW64)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/output/Debug/app.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "externalConsole": true,
      "MIMode": "gdb",
      "miDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe",
      "setupCommands": [
        { "text": "-enable-pretty-printing", "description": "Enable GDB pretty printing", "ignoreFailures": true }
      ],
      "preLaunchTask": "Build (Debug, MSYS2 g++)",
      "default": true
    },
    {
      "name": "Run (sem Debug)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/output/NoDebug/app.exe",
      "args": [],
      "cwd": "${workspaceFolder}",
      "externalConsole": true,
      "MIMode": "gdb",
      "miDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe",
      "preLaunchTask": "Build (NoDebug, MSYS2 g++)"
    }
  ]
}
